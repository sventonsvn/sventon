<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd
           http://www.springframework.org/schema/mvc
           http://www.springframework.org/schema/mvc/spring-mvc.xsd">


  <context:component-scan base-package="org.sventon"/>
  <mvc:annotation-driven conversion-service="conversationService"/>

  <!-- Uncomment to set a fixed locale regardless of browser accept headers.
    <bean id="localeResolver" class="org.springframework.web.servlet.i18n.FixedLocaleResolver">
      <property name="defaultLocale" value="en"/>
    </bean>
  -->
  <!-- Interceptor that make sure the UserContext is created -->
  <mvc:interceptors>
     <bean class="org.sventon.web.interceptor.UserContextInterceptor"/>
  </mvc:interceptors>

  
  <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
    <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
    <property name="prefix" value="/WEB-INF/jsp/"/>
    <property name="suffix" value=".jsp"/>
  </bean>

  <bean id="handlerMapping" class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping">
    <property name="alwaysUseFullPath" value="true"/>
  </bean>


  <bean id="conversationService" class="org.sventon.web.command.formatter.SventonFormattingConversionService"/>
</beans>
